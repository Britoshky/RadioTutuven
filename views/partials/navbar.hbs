<style>
    /* Estilos generales para el menú */
    .dropdown-menu {
        display: none;
        position: absolute;
        background-color: var(--hover-background-color, #f9f9f9);
        padding: 12px;
        /* Aumentar padding para mejorar el espaciado */
        z-index: 999;
        text-align: left;
        border-radius: 5px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 5px;
        min-width: 250px;
        /* Aumentar el ancho mínimo del contenedor */
    }

    .dropdown:hover>.dropdown-menu,
    .dropdown-menu .dropdown:hover>.dropdown-menu {
        display: block;
    }

    .dropdown-menu li {
        list-style: none;
        position: relative;
    }

    .dropdown-menu li a {
        color: #333;
        text-decoration: none;
        display: block;
        width: 100%;
        padding: 10px 12px;
        /* Aumentar padding interno para mayor espacio */
        border-radius: 5px;
        transition: background-color 0.3s ease;
        white-space: normal;
        /* Permite que el texto se ajuste en varias líneas */
        word-wrap: break-word;
        /* Ajusta las palabras largas para que se rompan */
        font-size: 16px;
        /* Aumentar el tamaño del texto para mejor legibilidad */
    }

    .dropdown-menu li:hover>a {
        background-color: #00bd9d;
        color: #fff;
    }

    .dropdown {
        position: relative;
    }

    .dropdown>.dropdown-menu {
        left: 0;
        top: 100%;
    }

    /* Estilo específico para submenús anidados en pantallas grandes */
    @media (min-width: 769px) {
        .dropdown-menu .dropdown>.dropdown-menu {
            left: calc(100% + 5px);
            /* Posiciona el submenú a la derecha del menú principal */
            top: 0;
            margin-left: 0;
            z-index: 1000;
            display: none;
            white-space: nowrap;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .dropdown-menu .dropdown:hover>.dropdown-menu {
            display: block;
        }
    }

    /* Ajustes para vista móvil */
    @media (max-width: 768px) {
        .dropdown-menu {
            position: static;
            display: none;
            margin: 0;
            box-shadow: none;
            width: 100%;
            /* Asegura que el menú use todo el ancho disponible */
        }

        .dropdown-menu li {
            width: 100%;
        }

        .dropdown:hover>.dropdown-menu,
        .dropdown-menu .dropdown:hover>.dropdown-menu {
            display: block;
            position: relative;
            margin-top: 0;
        }

        .dropdown-menu .dropdown>.dropdown-menu {
            position: relative;
            /* Ajusta el submenú en dispositivos móviles */
            left: 0;
            top: 0;
            display: none;
            width: 100%;
            /* Hace que el submenú use todo el ancho disponible */
        }

        .dropdown-menu .dropdown:hover>.dropdown-menu {
            display: block;
            margin-left: 0;
        }

        .rd-navbar-nav-wrap {
            width: 100%;
        }

        /* Ajuste adicional para texto en móviles */
        .dropdown-menu li a {
            font-size: 14px;
            /* Ajustar el tamaño del texto para mejorar el ajuste */
        }
    }
</style>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Seleccionar todos los dropdowns y submenús anidados
        var allDropdowns = document.querySelectorAll('.dropdown, .dropdown-menu, .dropdown-toggle');

        allDropdowns.forEach(function (dropdown) {
            // Añadir evento para retraso al mostrar
            dropdown.addEventListener('mouseenter', function () {
                clearTimeout(dropdown.hideTimeout);
                dropdown.showTimeout = setTimeout(function () {
                    var submenu = dropdown.querySelector('.dropdown-menu');
                    if (submenu) submenu.classList.add('show');
                }, 100); // 200ms delay before showing
            });

            // Añadir evento para retraso al ocultar con mayor duración
            dropdown.addEventListener('mouseleave', function () {
                clearTimeout(dropdown.showTimeout);
                var submenu = dropdown.querySelector('.dropdown-menu');
                if (submenu) {
                    dropdown.hideTimeout = setTimeout(function () {
                        submenu.classList.remove('show');
                    }, 100); // 500ms delay before hiding
                }
            });
        });
    });
</script>