{{> navigation}}

<div class="col-md-4 mx-auto mt-5">
    <div class="card">
        <div class="card-header">
            <h3>Edit Usuario</h3>
        </div>
        <div class="card-body">
            <form action="/users/edit/{{user._id}}?_method=PUT" method="post">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Nombre" value="{{user.name}}">
                    <br>
                    <input type="text" name="email" class="form-control" placeholder="Correo" value="{{user.email}}">
                    <br>
                    <input type="text" name="password" class="form-control" placeholder="Contraseña Actual">
                    <br>
                    <input type="text" name="passwordNew" class="form-control" placeholder="Contraseña nueva">
                    <br>
                    <input type="text" name="passwordNew2" class="form-control" placeholder="Repetir Contraseña nueva">
                </div>
                <br>
                <br>
                <div class="form-group">
                    <button class="btn btn-primary col-12" type="submit">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>