<!-- Page-->
<div class="page">
  <!-- Page Header-->

  <!-- My Best Photos-->
    {{> header}}
    {{> navbar}}
  <!-- Breadcrumbs-->
  <section class="breadcrumbs-custom bg-image" style="background-color: #a7bcb9">
    <div class="shell">
      <h1 class="breadcrumbs-custom__title">Contáctame</h1>
      <ul class="breadcrumbs-custom__path">
        <li><a href="/">Inicio</a></li>
        <li class="active">Contáctame</li>
      </ul>
    </div>
  </section>

  <!-- Book Your Photo Shoot-->
  <section class="section section-md bg-white">
    <div class="shell">

      <div class="range range-50 range-sm-center text-center">

        <div class="cell-md-12 cell-lg-12">
          <h2 class="text-bold">¡Nos encantaría saber de ti!</h2>
          <p><span class="box-width-2">¿Tienes alguna pregunta, comentario o sugerencia? No dudes en
              ponerte en contacto
              con nosotros. Estamos aquí para ayudarte en lo que necesites. Puedes completar el formulario de contacto a
              lo antes posible. ¡Gracias por tu interés y esperamos saber de ti pronto!</span></p>
        </div>

      </div>
      <div class="range range-50 range-sm-center range-md-reverse">

        <div class="cell-sm-12 cell-md-5 wow fadeInRight">
          <div class="layout-columns__aside-item">
            <p class="heading-5">Redes Sociales</p>
            <div class="divider-modern"></div>
            <ul class="list-inline-xs">
              <li><a class="icon icon-md icon-gray-7 fa fa-facebook" href="#"></a></li>
              <li><a class="icon icon-md icon-gray-7 fa fa-twitter" href="#"></a></li>
              <li><a class="icon icon-md icon-gray-7 fa fa-google" href="#"></a></li>
              <li><a class="icon icon-md icon-gray-7 fa fa-youtube" href="#"></a></li>
            </ul>
          </div>
          <div class="layout-columns__aside-item">
            <p class="heading-5">Correo</p>
            <div class="divider-modern"></div>
            <div class="unit unit-horizontal unit-spacing-xxs">
              <div class="unit__left"><span class="icon icon-md icon-primary material-icons-email"></span>
              </div>
              <div class="unit__body">radiotutuven@gmail.com</a></div>
            </div>
          </div>
          <div class="layout-columns__aside-item">
            <p class="heading-5">Dirección</p>
            <div class="divider-modern"></div>
            <div class="unit unit-horizontal unit-spacing-xxs">
              <div class="unit__left"><span class="icon icon-md icon-primary material-icons-location_on"></span>
              </div>
              <div class="unit__body">Cauquenes</a></div>
            </div>
          </div>
          <div class="layout-columns__aside-item">
            <p class="heading-5">Abierto</p>
            <div class="divider-modern"></div>
            <div class="unit unit-horizontal unit-spacing-xxs">
              <div class="unit__left"><span class="icon icon-md icon-primary mdi mdi-clock"></span></div>
              <div class="unit__body"><span>24/7</span></div>
            </div>
          </div>
        </div>
        <div class="cell-sm-12 cell-md-6 wow fadeInLeft">
          <article class="box-line"><span></span><span></span><span></span><span></span>
            <div class="box-line__main">
              <p class="heading-3">Conéctate con Nosotros</p>
              {{#if success_msg}}
              <div class="alert alert-success">{{success_msg}}</div>
              {{/if}}
              {{#if error_msg}}
              <div class="alert alert-danger">{{error_msg}}</div>
              {{/if}}
              {{#if errors}}
                <div class="alert alert-danger">
                  <ul class="text-left" style="margin:0;">
                    {{#each errors}}
                      <li>{{this.msg}}</li>
                    {{/each}}
                  </ul>
                </div>
              {{/if}}

              <!-- RD Mailform-->
              <form method="post" action="/contacto">
                {{!-- <div class="form-wrap">
                  <input class="form-input" id="contact-date" type="text" data-time-picker="date" name="date"
                    data-constraints="@Required">
                  <label class="form-label" for="contact-date">Event Date</label>
                </div> --}}
                <div class="form-wrap">
                  <input class="form-input" id="contact_name" type="text" name="name" data-constraints="@Required"
                    value="{{formData.name}}" required>
                  <label class="form-label" for="contact_name">Tu nombre</label>
                </div>
                <div class="form-wrap">
                  <input class="form-input" id="contact_email" type="email" name="email"
                    data-constraints="@Email @Required" value="{{formData.email}}" required>
                  <label class="form-label" for="contact_email">Correo</label>
                </div>
                <div class="form-wrap">
                  <label class="form-label" for="contact_message">Tu mensaje</label>
                  <textarea class="form-input" id="contact_message" name="message" data-constraints="@Required"
                    required>{{formData.message}}</textarea>
                </div>
                <!-- Honeypot para bots: no llenar -->
                <div class="form-wrap" style="position:absolute; left:-10000px; top:auto; width:1px; height:1px; overflow:hidden;">
                  <label for="contact_website">No completar este campo</label>
                  <input type="text" id="contact_website" name="website" tabindex="-1" autocomplete="off">
                </div>
                <!--Google captcha-->
                <div class="form-wrap">
                  <div id="token" class="g-recaptcha" data-sitekey="6LfraZUpAAAAAMDH8BZYuqrjpTZSDbX_AKJ5Wu_h"
                    data-action="BTNCONTACTO" name="g-recaptcha-response"></div>
                </div>
                <!-- End google captcha-->
                <div class="form-wrap form-button offset-1">
                  <button class="button button-block button-primary-outline button-ujarak"
                    type="submit">Escríbenos</button>
                </div>
              </form>
            </div>
          </article>
        </div>

      </div>


    </div>
  </section>

  <!-- Global Mailform Output-->
  <div class="snackbars" id="form-output-global"></div>

  {{> footer}}
  {{> player}}



  <!-- Agrega el script de la biblioteca de reCAPTCHA -->
  <script async src="https://www.google.com/recaptcha/enterprise.js"></script>
  <script>
    // Validación mínima en el frontend para feedback inmediato
    (function(){
      const form = document.querySelector('form[action="/contacto"]');
      if (!form) return;
      form.addEventListener('submit', function(e){
        const name = document.getElementById('contact_name').value.trim();
        const email = document.getElementById('contact_email').value.trim();
        const message = document.getElementById('contact_message').value.trim();
        const errors = [];
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (name.length < 2) errors.push('El nombre debe tener al menos 2 caracteres');
        if (!emailRegex.test(email)) errors.push('Correo electrónico inválido');
        if (message.length < 10) errors.push('El mensaje debe tener al menos 10 caracteres');
        if (message.length > 2000) errors.push('El mensaje no puede superar los 2000 caracteres');
        if (errors.length){
          e.preventDefault();
          alert(errors.join('\n'));
        }
      });
    })();
  </script>
</div>