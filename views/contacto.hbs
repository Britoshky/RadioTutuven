{{> anuncios_display}}

<section>
    <div class="container">
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <h2 class="text-center mb-4">Formulario de Contacto de Radio Chanquina</h2>
                    {{#if success_msg}}
                    <div class="alert alert-success" role="alert">
                        {{success_msg}}
                    </div>
                    {{/if}}
                    {{#if error_msg}}
                    <div class="alert alert-danger" role="alert">
                        {{error_msg}}
                    </div>
                    {{/if}}
                    <form action="/contacto" method="post">
                        <div class="mb-3">
                            <label for="nombre" class="form-label">Nombre:</label>
                            <input type="text" class="form-control" id="nombre" name="nombre" required>
                        </div>
                        <div class="mb-3">
                            <label for="correo" class="form-label">Correo Electr√≥nico:</label>
                            <input type="email" class="form-control" id="correo" name="correo" required>
                        </div>
                        <div class="mb-3">
                            <label for="mensaje" class="form-label">Mensaje:</label>
                            <textarea class="form-control" id="mensaje" name="mensaje" rows="4" required></textarea>
                        </div>
                        <!-- Agrega el campo del captcha -->
                        <div id="token" class="g-recaptcha" data-sitekey="6LcqX14pAAAAAD9uELxUBj9mhODRz4H44ZNEIvGL"
                            data-action="BTNCONTACTO" name="g-recaptcha-response"></div>
                        <br>
                        <div class="text-center">
                            <button type="submit" value="Submit" class="btn btn-secondary">Enviar Mensaje</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>



